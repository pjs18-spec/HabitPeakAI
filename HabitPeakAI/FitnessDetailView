import SwiftUI
import SwiftData

struct FitnessDetailView: View {
    @Environment(\.modelContext) private var modelContext
    @Environment(\.dismiss) private var dismiss
    
    var body: some View {
        ZStack {
            LinearGradient(colors: [.red.opacity(0.8), .orange.opacity(0.8)], startPoint: .topLeading, endPoint: .bottomTrailing)
                .ignoresSafeArea()
            
            VStack(spacing: 30) {
                // Principle Header
                VStack(spacing: 10) {
                    Image(systemName: "dumbbell")
                        .font(.system(size: 60))
                        .foregroundStyle(.white)
                    
                    Text("FITNESS")
                        .font(.largeTitle.bold())
                        .foregroundStyle(.white)
                    
                    Text("Train to be strong, capable, and hard to break — now and for decades")
                        .font(.subheadline.weight(.medium))
                        .multilineTextAlignment(.center)
                        .lineLimit(2)
                        .foregroundStyle(.white.opacity(0.9))
                }
                
                // 5 AI Habits
                VStack(spacing: 20) {
                    FitnessHabitButton(name: "Strength Session", subtitle: "Push, Pull, Hinge, Squat, Carry", icon: "figure.strengthtraining.traditional")
                    FitnessHabitButton(name: "Engine Builder", subtitle: "Sustained aerobic", icon: "figure.run")
                    FitnessHabitButton(name: "Hard Effort", subtitle: "Short, intense work", icon: "flame")
                    FitnessHabitButton(name: "Move Well", subtitle: "Mobility and joint health", icon: "figure.yoga")
                    FitnessHabitButton(name: "Recovery Reset", subtitle: "Downshift, breathe, restore", icon: "lungs")
                }
                
                Spacer()
                
                Button("← Back to Wizard") {
                    dismiss()
                }
                .font(.title2.bold())
                .frame(maxWidth: .infinity)
                .padding()
                .background(.white, in: Capsule())
                .foregroundStyle(.red)
            }
            .padding()
        }
    }
}

struct FitnessHabitButton: View {
    let name: String
    let subtitle: String
    let icon: String
    @Environment(\.modelContext) private var modelContext
    
    var body: some View {
        HStack {
            Image(systemName: icon)
                .font(.title2)
                .foregroundStyle(.red)
                .frame(width: 40)
            
            VStack(alignment: .leading, spacing: 4) {
                Text(name)
                    .font(.headline.bold())
                    .foregroundStyle(.white)
                Text(subtitle)
                    .font(.headline.bold())
                    .foregroundStyle(.white.opacity(0.9))
                    .lineLimit(2)
            }
            
            Spacer()
            
            Button(action: {
                let newHabit = Habit(name: name, category: "Fitness")
                modelContext.insert(newHabit)
                print("✅ Added: \(name) to SwiftData")
            }) {
                Image(systemName: "plus.circle.fill")
                    .font(.title2)
                    .foregroundStyle(.white)
                    .scaleEffect(1.1)
            }
        }
        .padding()
        .background(.ultraThinMaterial, in: RoundedRectangle(cornerRadius: 20))
        .frame(height: 70)
    }
}

#Preview {
    FitnessDetailView()
        .modelContainer(for: Habit.self)
}

import SwiftUI
import SwiftData

struct MentalHealthDetailView: View {
    @Environment(\.modelContext) private var modelContext
    @Environment(\.dismiss) private var dismiss
    
    var body: some View {
        ZStack {
            LinearGradient(colors: [.blue.opacity(0.8), .indigo.opacity(0.8)], startPoint: .topLeading, endPoint: .bottomTrailing)
                .ignoresSafeArea()
            
            VStack(spacing: 30) {
                // Principle Header
                VStack(spacing: 10) {
                    Image(systemName: "brain.head.profile")
                        .font(.system(size: 60))
                        .foregroundStyle(.white)
                    
                    Text("MENTAL HEALTH")
                        .font(.largeTitle.bold())
                        .foregroundStyle(.white)
                    
                    Text("Nervous system first, thoughts second")
                        .font(.subheadline.weight(.medium))
                        .multilineTextAlignment(.center)
                        .lineLimit(2)
                        .foregroundStyle(.white.opacity(0.9))
                }
                
                // 5 AI Habits
                VStack(spacing: 20) {
                    MentalHealthHabitButton(name: "Physiological Reset", subtitle: "2 min box breathing or cyclic sigh", icon: "lungs")
                    MentalHealthHabitButton(name: "Name the Emotion", subtitle: "Reduce amygdala load", icon: "tag")
                    MentalHealthHabitButton(name: "Thought Diffusion", subtitle: "\"I'm having the thought that…\"", icon: "arrow.triangle.2.circlepath")
                    MentalHealthHabitButton(name: "Stress Audit", subtitle: "What's controllable Today?", icon: "magnifyingglass")
                    MentalHealthHabitButton(name: "Evening Decompression", subtitle: "10m nervous system downshift", icon: "bed.double.fill")
                }
                
                Spacer()
                
                Button("← Back to Wizard") {
                    dismiss()
                }
                .font(.title2.bold())
                .frame(maxWidth: .infinity)
                .padding()
                .background(.white, in: Capsule())
                .foregroundStyle(.blue)
            }
            .padding()
        }
    }
}

struct MentalHealthHabitButton: View {
    let name: String
    let subtitle: String
    let icon: String
    @Environment(\.modelContext) private var modelContext
    
    var body: some View {
        HStack {
            Image(systemName: icon)
                .font(.title2)
                .foregroundStyle(.blue)
                .frame(width: 40)
            
            VStack(alignment: .leading, spacing: 4) {
                Text(name)
                    .font(.headline.bold())
                    .foregroundStyle(.white)
                Text(subtitle)
                    .font(.headline.bold())
                    .foregroundStyle(.white.opacity(0.8))
            }
            
            Spacer()
            
            Button(action: {
                let newHabit = Habit(name: name, category: "Mental Health")
                modelContext.insert(newHabit)
                print("✅ Added: \(name) to SwiftData")
            }) {
                Image(systemName: "plus.circle.fill")
                    .font(.title2)
                    .foregroundStyle(.white)
                    .scaleEffect(1.1)
            }
        }
        .padding()
        .background(.ultraThinMaterial, in: RoundedRectangle(cornerRadius: 20))
        .frame(height: 70)
    }
}

#Preview {
    MentalHealthDetailView()
        .modelContainer(for: Habit.self)
}

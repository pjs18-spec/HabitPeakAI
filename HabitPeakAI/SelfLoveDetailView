import SwiftUI
import SwiftData

struct SelfLoveDetailView: View {
    @Environment(\.modelContext) private var modelContext
    @Environment(\.dismiss) private var dismiss
    
    var body: some View {
        ZStack {
            LinearGradient(colors: [.indigo.opacity(0.8), .purple.opacity(0.8)], startPoint: .topLeading, endPoint: .bottomTrailing)
                .ignoresSafeArea()
            
            VStack(spacing: 30) {
                // Principle Header
                VStack(spacing: 10) {
                    Image(systemName: "figure.and.heart")
                        .font(.system(size: 60))
                        .foregroundStyle(.white)
                    
                    Text("SELF LOVE")
                        .font(.largeTitle.bold())
                        .foregroundStyle(.white)
                    
                    Text("You act in alignment with who you believe you are")
                        .font(.subheadline.weight(.medium))
                        .multilineTextAlignment(.center)
                        .lineLimit(2)
                        .foregroundStyle(.white.opacity(0.9))
                }
                
                // 5 AI Habits
                VStack(spacing: 20) {
                    SelfLoveHabitButton(name: "Identity Vote", subtitle: "\"Today = healthy/calm person\"", icon: "checkmark.circle")
                    SelfLoveHabitButton(name: "Self-Talk Reframe", subtitle: "Replace criticism with curiosity", icon: "quote.bubble")
                    SelfLoveHabitButton(name: "Body Respect Check", subtitle: "Nourish vs punish mindset", icon: "figure.walk.heart")
                    SelfLoveHabitButton(name: "Rest Without Guilt", subtitle: "Permission to recharge", icon: "bed.double")
                    SelfLoveHabitButton(name: "Values Alignment Scan", subtitle: "Am I living my values?", icon: "scale.3d")
                }
                
                Spacer()
                
                Button("← Back to Wizard") {
                    dismiss()
                }
                .font(.title2.bold())
                .frame(maxWidth: .infinity)
                .padding()
                .background(.white, in: Capsule())
                .foregroundStyle(.indigo)
            }
            .padding()
        }
    }
}

struct SelfLoveHabitButton: View {
    let name: String
    let subtitle: String
    let icon: String
    @Environment(\.modelContext) private var modelContext
    
    var body: some View {
        HStack {
            Image(systemName: icon)
                .font(.title2)
                .foregroundStyle(.indigo)
                .frame(width: 40)
            
            VStack(alignment: .leading, spacing: 4) {
                Text(name)
                    .font(.headline.bold())
                    .foregroundStyle(.white)
                Text(subtitle)
                    .font(.headline.bold())
                    .foregroundStyle(.white.opacity(0.9))
                    .lineLimit(2)
            }
            
            Spacer()
            
            Button(action: {
                let newHabit = Habit(name: name, category: "Self Love")
                modelContext.insert(newHabit)
                print("✅ Added: \(name) to SwiftData")
            }) {
                Image(systemName: "plus.circle.fill")
                    .font(.title2)
                    .foregroundStyle(.white)
                    .scaleEffect(1.1)
            }
        }
        .padding()
        .background(.ultraThinMaterial, in: RoundedRectangle(cornerRadius: 20))
        .frame(height: 70)
    }
}

#Preview {
    SelfLoveDetailView()
        .modelContainer(for: Habit.self)
}
